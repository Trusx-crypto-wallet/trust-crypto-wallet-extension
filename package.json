    "build:dev": "webpack --mode=development --config webpack.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rimraf .next dist build node_modules/.cache",
    "deploy": "npm run build && npm run deploy:netlify",
    "deploy:netlify": "netlify deploy --prod --dir=.next",
    "setup": "npm install && npm run compile:contracts",
    "compile:contracts": "node scripts/compileContracts.js",
    "deploy:contracts": "node scripts/deployCrossChainUSDT.js",
    "setup:layerzero": "node scripts/setupLayerZeroConfig.js",
    "verify:contracts": "node scripts/verifyContracts.js",
    "generate:templates": "node scripts/generateTemplates.js",
    "security:audit": "npm audit && snyk test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
